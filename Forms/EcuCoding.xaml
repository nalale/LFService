<UserControl x:Class="BoadService.EcuCoding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoadService">
    <Grid Margin="11,11,11,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Name="grid" />

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Name="commitButtons" Orientation="Horizontal" >
            <Button Name="btnBack" Content="Назад" Margin="5" Padding="3,3,3,3" Click="CommitButtonCLick"/>
            <Button Name="btnDownload" Content="Скачать" Margin="5" Padding="3,3,3,3" Click="CommitButtonCLick"/>
            <Button Name="btnUpload" Content="Зарузить" Margin="5" Padding="3,3,3,3" Click="CommitButtonCLick"/>
            <Button Name="btnOpen" Content="Открыть" Margin="5" Padding="3,3,3,3" Click="CommitButtonCLick"/>
            <Button Name="btnSave" Content="Сохранить" Margin="5" Padding="3,3,3,3" Click="CommitButtonCLick"/>
            
        </StackPanel>
            
    </Grid>
</UserControl>
